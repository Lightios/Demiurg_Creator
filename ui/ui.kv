Screen:
    MDNavigationLayout:
        ScreenManager:
            id: screen_manager

            MenuScreen:
                name: "menu"
                id: menu_screen
            CreatorScreen:
                name: "creator"
                id: creator_screen


        MDNavigationDrawer:
            id: nav_drawer
            ContentNavigationDrawer:

<ContentNavigationDrawer>:
    canvas.before:
        Color:
            rgba: rgba("#1E232E")
        Rectangle:
            pos: self.pos
            size: self.size

    NavigationButton:
        text: "New project"
        pos_hint: {"x": 0.3, "center_y": 0.8}
        on_press: app.create_new_project(); app.root.ids.nav_drawer.set_state("close") # app.root.ids.screen_manager.current = "creator";

    NavigationButton:
        text: "Save project"
        pos_hint: {"x": 0.3, "center_y": 0.7}
        on_press: app.save_project()

    NavigationButton:
        text: "Load project"
        pos_hint: {"x": 0.3, "center_y": 0.6}
        on_press: app.load_project()

    NavigationButton:
        text: "Export"
        pos_hint: {"x": 0.3, "center_y": 0.5}
        on_press: app.export_game()

    NavigationButton:
        text: "Delete all"
        pos_hint: {"x": 0.3, "center_y": 0.4}
        on_press: app.delete_all()





<NavigationButton@MDCard>:
    size_hint: None, None
    size: dp(150), dp(100)
    md_bg_color: rgba("#1E232E")

    RelativeLayout:
        MDLabel:
            pos_hint: {"center_y": 0.5}
            font_size: dp(20)
            font_name: "Nunito_bold"
            text: root.text

        MDIcon:
            pos_hint: {"x": 0.8,"center_y": 0.5}
            icon: "chevron-right"