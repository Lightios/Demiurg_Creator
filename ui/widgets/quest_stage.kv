<QuestStage>:
    size_hint: 1, None
    height: dp(400)
    md_bg_color: rgba("#5F499D")

    BoxLayout:
        orientation: "vertical"

        FloatLayout:
            size_hint: 1, None
            height: dp(250)

            MDLabel:
                id: id_label
                text: root.id_text
                pos_hint: {"x": 0.1, "center_y": 0.9}
                font_size: dp(25)
                font_name: "Source_code_pro_bold"

            MDLabel:
                id: location_label
                text: "Location: "
                pos_hint: {"x": 0.1, "center_y": 0.65}
                font_size: dp(25)
                font_name: "Source_code_pro_bold"

            MDDropDownItem:
                id: location_select
                pos_hint: {"center_y": 0.65}
                x: location_label.x + 200
                text: 'Select location'
                on_release: root.menu.open()
                font_size: dp(20)
                font_name: "Source_code_pro_bold"

            MDTextField:
                id: text_field
                pos_hint: {"x": 0.1, "y": 0.1}
                mode: "rectangle"
                multiline: True
                size_hint: 0.8, 1
                max_height: dp(100)
                font_name: "Source_code_pro_bold"

        StackLayout:
            id: stack
            pos_hint: {"x": 0.05}
            spacing: 0, 20

            OldschoolButton:
                id: add_new_option_button
                name: "option"
                on_press: root.add_new_option()
                pos_hint: {"center_x": 0.5}


<StageOption>:
    md_bg_color: 1, 1, 1, 0.1
    style: "outlined"
    line_color: rgba("#EFF4FF")

    size_hint: 0.9, None
    height: dp(150)

    FloatLayout:
        MDTextField:
            id: text_field
            pos_hint: {"x": 0.01, "center_y": 0.8}
            mode: "rectangle"
            hint_text: "Option name"
            size_hint_x: 0.5

        MDTextField:
            id: message_field
            pos_hint: {"x": 0.01, "center_y": 0.2}
            mode: "rectangle"
            hint_text: "Message"
            size_hint_x: 0.5

        MDLabel:
            id: stage_label
            text: "Go to stage: "
            pos_hint: {"x": 0.7, "center_y": 0.5}
            font_size: dp(20)
            font_name: "Source_code_pro_bold"

        MDDropDownItem:
            id: stage_select
            pos_hint: {"center_y": 0.49}
            x: stage_label.x + 200
            text: 'Select stage'
            on_release: root.menu.open()
            font_size: dp(20)
            font_name: "Source_code_pro_bold"

        MDIconButton:
            icon: "delete"
            pos_hint: {"x": 0.95, "y": 0.7}
            on_press: root.remove_option()