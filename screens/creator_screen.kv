<CreatorScreen>:
    GridLayout:
        canvas:
            Color:
                rgba: 0.09, 0.09, 0.09, 1
            Rectangle:
                pos: self.pos
                size: self.size
        pos_hint: {"center_x": 0.1, "center_y": 0.5}
        size_hint: 0.2, 1
        cols: 1

        MDRectangleFlatButton:
            text: "Create new element"
            on_press: root.spawn()
            pos_hint: {"center_x": 0.5}

        MDRectangleFlatButton:
            text: "Launch debugger"
            on_press: root.debug()

        MDRectangleFlatButton:
            text: "Unmark"
            on_press: root.unmark()

        MDRectangleFlatButton:
            text: "Connect two"
            on_press: root.open_connection_dialog()

    FloatLayout:
        id: content
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        size_hint: 0.6, 1

    RelativeLayout:
        canvas:
            Color:
                rgba: 0.09, 0.09, 0.09, 1
            Rectangle:
                pos: self.pos
                size: self.size

        pos_hint: {"center_x": 0.9, "center_y": 0.5}
        size_hint: 0.2, 1

        cols: 1

        MDLabel:
            pos_hint: {"center_x": 0.5, "center_y": 0.9}
            text: "Options"
            color: "white"
            halign: "center"
            font_size: dp(35)

        MDLabel:
            pos_hint: {"center_x": 0.5, "center_y": 0.75}
            text: "Name"
            color: "white"
            halign: "center"

        MDTextField:
            pos_hint: {"center_x": 0.5, "center_y": 0.7}
            size_hint_x: 0.5
            on_text: root.on_text(self.text)
            id: input
            disabled: True
